(function ($, root, undefined) {
	//包含功能
	//文章页轮播图
	$(function() {
		/* 文章页轮播图 */
		let WidthCycle = 300;//宽度周期，等于实际图片width的值
		let ImgQuantity = 3;//图片数量，等于实际一共有几张图片
		let x_initial = 0;
		function loop(){
			let x_computered = x_initial - WidthCycle;
			let x_string = "translate3d(" + x_computered + "px, 0px, 0px)";
			$(".Slidshow__ImgWrapper__Pc").css("transform",x_string);
			if(x_computered == -WidthCycle * ImgQuantity){
				x_initial = 0;
			} else {
				x_initial = x_computered;
			}
		}
		loop();
		let start_loop = self.setInterval(loop,8000);
	});
})(jQuery, this);